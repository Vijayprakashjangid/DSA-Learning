/*
//pattern 14
int main() {

    int n;
    cin>>n;

    int row = 1;

    while(row <= n) {

        //space print karlo
         int space = n - row ;
        while(space) {
           
            cout<< space;
            space = space - 1;
        }

        //stars print karlo
        int col = 1;
        while( col <= row ) {
            cout<<"*";
            col = col + 1;
        }
        cout<<endl;
        row = row + 1;
    }
    return 0;
}

